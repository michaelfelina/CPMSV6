@model IEnumerable<CPMS.BL.Entity>

@{
    ViewBag.Title = "Entity";
}

<h2>Entity</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VAT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateAdded)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateUpdated)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VAT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remarks)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateAdded)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateUpdated)
        </td>
        <td>
            <a href="@Url.Action("Edit","Entity",  new {id = item.IDNo})"><i class="fa fa-pencil fa-fw" aria-hidden="true"></i></a>  |
            <a href="@Url.Action("Details","Entity",  new {id = item.IDNo})"><i class="fa fa-book fa-fw" aria-hidden="true"></i></a>  |
            <a href="@Url.Action("Delete","Entity",  new {id = item.IDNo})"><i class="fa fa-trash fa-fw" aria-hidden="true"></i></a>
        </td>
    </tr>
}

</table>
